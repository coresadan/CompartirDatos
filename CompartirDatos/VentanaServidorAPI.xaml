<Window x:Class="CompartirDatos.VentanaServidorAPI"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CompartirDatos"
        mc:Ignorable="d"
        Title="VentanaServidorAPI" Height="550" Width="800"
        ResizeMode="NoResize" WindowStyle="None" WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/ChatGPT Image 12 feb 2026, 14_29_46.png"/>
        </Grid.Background>
        <Label Content="RECURSOS DEL SERVIDOR" HorizontalAlignment="Left" Margin="25,20,0,0" VerticalAlignment="Top" Foreground="#FF007ACC" FontSize="20" FontWeight="Bold"/>

        <DataGrid x:Name="dgAPIListaPiezas" Margin="25,57,25,93" 
                  Foreground="White" 
                  RowBackground="#FF2D2D30" 
                  AlternatingRowBackground="#FF3E3E42"
                  BorderBrush="#FF3E3E42" 
                  HorizontalGridLinesBrush="#FF3E3E42" 
                  VerticalGridLinesBrush="#FF3E3E42"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False">
            <DataGrid.Background>
                <SolidColorBrush Color="#FF252526" Opacity="0.75"/>
            </DataGrid.Background>
            <DataGrid.Columns>
                <DataGridTextColumn Header="Nombre del Listado" Binding="{Binding .}" Width="*" />
            </DataGrid.Columns>
        </DataGrid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,25,25">
            <Button x:Name="btnCargar" Content="ACTUALIZAR LISTADOS" Click="botonCargarClick" 
                    Width="160" Height="35" Margin="5"
                    Background="#FF3E3E42" Foreground="White" BorderBrush="#FF555555"/>

            <Button x:Name="btnImportar" Content="IMPORTAR SELECCIÓN" Click="botonImportarSeleccion_Click" 
                    Width="160" Height="35" Margin="5"
                    Background="#FF007ACC" Foreground="White" BorderBrush="#FF005A9E" FontWeight="Bold"/>

            <Button x:Name="btnCancelar" Content="CERRAR" Click="botonCancelarCargarAPI" 
                    Width="100" Height="35" Margin="5"
                    Background="#FF454545" Foreground="White" BorderBrush="#FF555555"/>
        </StackPanel>
    </Grid>
</Window>
<Window x:Class="CompartirDatos.DetallesDeLaLista"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        mc:Ignorable="d" 
        Title="Desglose de las Piezas" 
        Height="846" Width="1200"
        WindowStyle="None" 
        ResizeMode="NoResize"
        AllowsTransparency="True"
        WindowStartupLocation="CenterOwner">

    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="15">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Window.Background>
        <ImageBrush ImageSource="/Gemini_Generated_Image_drpozudrpozudrpo.png" Stretch="UniformToFill"/>
    </Window.Background>

    <Grid Margin="0,0,0,-6">
        <Grid.Background>
            <ImageBrush ImageSource="/ChatGPT Image 12 feb 2026, 14_29_46.png"/>
        </Grid.Background>

        <Button Content="✕" 
                HorizontalAlignment="Right" 
                VerticalAlignment="Top" 
                Margin="0,15,40,0"
                Background="Transparent" 
                Foreground="#FF00FF04" 
                FontSize="22" 
                BorderThickness="0"
                Cursor="Hand"
                Click="BotonCerrar_Click"
                Panel.ZIndex="10"/>

        <Border Background="#B2000000" 
                CornerRadius="15" 
                Margin="40,95,40,181" 
                BorderBrush="#FF00FF04" 
                BorderThickness="0.5">

            <DataGrid x:Name="dgDetalles" 
                      AutoGenerateColumns="False" 
                      Background="Transparent" 
                      Foreground="#FF00FF04" 
                      RowBackground="Transparent"
                      BorderThickness="0"
                      HorizontalGridLinesBrush="#3300FF04"
                      VerticalGridLinesBrush="#3300FF04"
                      HeadersVisibility="Column"
                      IsReadOnly="True"
                      FontSize="16"
                      Margin="10"
                      CanUserAddRows="False">

                <DataGrid.Resources>
                    <Style TargetType="{x:Type DataGridColumnHeader}">
                        <Setter Property="Background" Value="Black"/>
                        <Setter Property="Foreground" Value="#FF00FF04"/>
                        <Setter Property="BorderBrush" Value="#FF00FF04"/>
                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                        <Setter Property="Padding" Value="5"/>
                    </Style>
                </DataGrid.Resources>

                <DataGrid.Columns>
                    <DataGridTextColumn x:Name="colPieza" Header="Pieza" Binding="{Binding Nombre}" Width="2*"/>
                    <DataGridTextColumn x:Name="colColor" Header="Color" Binding="{Binding Color}" Width="*"/>
                    <DataGridTextColumn x:Name="colLargo" Header="Largo (mm)" Binding="{Binding Largo}" Width="*"/>
                    <DataGridTextColumn x:Name="colAncho" Header="Ancho (mm)" Binding="{Binding Ancho}" Width="*"/>
                    <DataGridTextColumn x:Name="colRol" Header="Rol / Cargo" Binding="{Binding Rol}" Visibility="Collapsed" Width="*"/>
                    <DataGridTextColumn x:Name="colTurno" Header="Turno" Binding="{Binding Turno}" Visibility="Collapsed" Width="*"/>
                    <DataGridTextColumn x:Name="colPin" Header="PIN" Binding="{Binding Pin}" Visibility="Collapsed" Width="*"/>
                    <DataGridTextColumn x:Name="colNacio" Header="Origen" Binding="{Binding Nacionalidad}" Visibility="Collapsed" Width="*"/>
                    <DataGridTextColumn x:Name="colAnti" Header="Antigüedad" Binding="{Binding Antiguedad}" Visibility="Collapsed" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <Button Content="Terminadas" HorizontalAlignment="Left" Margin="52,676,0,0" Height="41" Width="172" FontSize="24" VerticalAlignment="Top" FontWeight="Bold" Background="Black" Foreground="#FF00FF04" Click="BotonTerminadasClick"/>
        <Button Content="Restantes" HorizontalAlignment="Left" Margin="52,724,0,0" Height="37" Width="172" FontSize="24" VerticalAlignment="Top" FontWeight="Bold" Background="Black" Foreground="#FF00FF04" Click="BotonRestantesClick"/>
        <Button Content="Rechazadas" HorizontalAlignment="Left" Margin="52,766,0,0" Height="41" Width="172" FontSize="24" VerticalAlignment="Top" FontWeight="Bold" Background="Black" Foreground="#FF00FF04" Click="BotonRechazadasClick"/>
        <Button Content="Usuarios" HorizontalAlignment="Left" Margin="407,676,0,0" Height="41" Width="172" FontSize="24" VerticalAlignment="Top" FontWeight="Bold" Background="Black" Foreground="#FF00FF04" Click="BotonUsuariosClick"/>

        <Button x:Name="btnAdmin" Content="⚙️ Modo Administrador" Click="btnAdmin_Click" Background="#2c3e50" Foreground="White" Margin="0,0,10,10" FontSize="20" HorizontalAlignment="Right" Width="237" Height="34" VerticalAlignment="Bottom"/>

        <Expander Header="🔍 ORDENAR POR" HorizontalAlignment="Left" Margin="229,685,0,0" VerticalAlignment="Top" Width="160" Background="Black" Foreground="#FF00FF04" BorderBrush="#FF00FF04" BorderThickness="1" FontSize="14" FontWeight="Bold">
            <StackPanel Background="Black">
                <Button Content="✅ Nombre" Click="OrdenNombre_Click" Background="Black" Foreground="#FF00FF04" BorderThickness="0" Height="30"/>
                <Button Content="📏 Largo" Click="OrdenLargo_Click" Background="Black" Foreground="#FF00FF04" BorderThickness="0" Height="30"/>
                <Button Content="↔️ Ancho" Click="OrdenAncho_Click" Background="Black" Foreground="#FF00FF04" BorderThickness="0" Height="30"/>
                <Button Content="🎨 Color" Click="OrdenColor_Click" Background="Black" Foreground="#FF00FF04" BorderThickness="0" Height="30"/>
            </StackPanel>
        </Expander>

        <Expander x:Name="datosUsuario" Header="🔍 ORDENAR POR" HorizontalAlignment="Left" Margin="584,685,0,0" VerticalAlignment="Top" Width="160" Background="Black" Foreground="#FF00FF04" BorderBrush="#FF00FF04" BorderThickness="1" FontSize="14" FontWeight="Bold">
            <StackPanel Background="Black">
                <Button Content="✅ Nombre" Click="OrdenNombre_Click" Background="Black" Foreground="#FF00FF04" BorderThickness="0" Height="30"/>
                <Button Content="📏 Turno" Click="OrdenTurno_Click" Background="Black" Foreground="#FF00FF04" BorderThickness="0" Height="30"/>
                <Button Content="↔️ Rol" Click="OrdenRol_Click" Background="Black" Foreground="#FF00FF04" BorderThickness="0" Height="30"/>
            </StackPanel>
        </Expander>

        <Expander x:Name="datosAdministrador" Header="🔍 ORDENAR POR" HorizontalAlignment="Left" Margin="749,685,0,0" VerticalAlignment="Top" Width="160" Background="Black" Foreground="#FF00FF04" BorderBrush="#FF00FF04" BorderThickness="1" FontSize="14" FontWeight="Bold" Visibility="Collapsed">
            <StackPanel Background="Black">
                <Button Content="🎨 Pin" Click="OrdenPin_Click" Background="Black" Foreground="#FF00FF04" BorderThickness="0" Height="30"/>
                <Button Content="🎨 Antiguedad" Click="OrdenAntiguedad_Click" Background="Black" Foreground="#FF00FF04" BorderThickness="0" Height="30"/>
                <Button Content="🎨 Nacionalidad" Click="OrdenNacionalidad_Click" Background="Black" Foreground="#FF00FF04" BorderThickness="0" Height="30"/>
            </StackPanel>
        </Expander>
    </Grid>
</Window>
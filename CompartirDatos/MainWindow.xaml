<Window x:Class="CompartirDatos.MainWindow"

        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"

        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"

        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"

        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"

        xmlns:local="clr-namespace:CompartirDatos"

        mc:Ignorable="d"

        Title="TRAZA-WOOD" Height="450" Width="800" Loaded="Window_Loaded"

        Closing="Window_Closing"

        ContentRendered="Window_ContentRendered"

        MinHeight="768" MinWidth="1024"

        WindowStyle="None" 

        AllowsTransparency="True" 

        Background="Transparent"

        WindowStartupLocation="CenterScreen">


    <Window.Resources>

        <Style TargetType="Button">

            <Setter Property="Background" Value="#FFBBFFFD"/>

            <Setter Property="Foreground" Value="Black"/>

            <Setter Property="Padding" Value="10,5"/>

            <Setter Property="Template">

                <Setter.Value>

                    <ControlTemplate TargetType="Button">

                        <Border x:Name="border" 

                            Background="{TemplateBinding Background}" 

                            BorderBrush="{TemplateBinding BorderBrush}" 

                            BorderThickness="{TemplateBinding BorderThickness}" 

                            CornerRadius="8">

                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>

                        </Border>

                        <ControlTemplate.Triggers>

                            <Trigger Property="IsMouseOver" Value="True">

                                <Setter TargetName="border" Property="Background" Value="#555555"/>

                                <Setter Property="Foreground" Value="Red"/>

                                <Setter Property="Cursor" Value="Hand"/>

                            </Trigger>

                            <Trigger Property="IsPressed" Value="True">

                                <Setter TargetName="border" Property="Background" Value="#333333"/>

                            </Trigger>

                        </ControlTemplate.Triggers>

                    </ControlTemplate>

                </Setter.Value>

            </Setter>

            <Setter Property="Effect">

                <Setter.Value>

                    <DropShadowEffect BlurRadius="5" ShadowDepth="2"/>

                </Setter.Value>

            </Setter>

        </Style>


        <Style TargetType="Button" x:Key="botonEspecial" BasedOn="{StaticResource {x:Type Button}}">

            <Style.Triggers>

                <Trigger Property="IsMouseOver" Value="True">

                    <Setter Property="Foreground" Value="Blue"/>

                </Trigger>

            </Style.Triggers>

        </Style>

    </Window.Resources>


    <Border CornerRadius="20" BorderThickness="1.5" BorderBrush="#FF00FF04" Background="#1A1A1A" ClipToBounds="True">

        <Grid MouseLeftButtonDown="Grid_MouseLeftButtonDown">

            <Grid.Background>

                <ImageBrush ImageSource="/fondoMainWindow.png" Stretch="Fill"/>

            </Grid.Background>


            <Grid.ColumnDefinitions>

                <ColumnDefinition Width="284*"/>

                <ColumnDefinition Width="228*"/>

                <ColumnDefinition Width="295*"/>

                <ColumnDefinition Width="217*"/>

                <ColumnDefinition Width="0" x:Name="jjjjj"/>

            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>

                <RowDefinition Height="193*"/>

                <RowDefinition Height="242*"/>

            </Grid.RowDefinitions>


            <Button Content="✕" Grid.Column="3" HorizontalAlignment="Right" VerticalAlignment="Top" 

                    Margin="0,15,20,0" Background="Transparent" BorderThickness="0" 

                    Foreground="#FF00FF04" FontSize="22" FontWeight="Bold" 

                    Click="BotonCerrar_Click" Panel.ZIndex="100"/>


            <Button x:Name="BotonGuardarDatos" 

        Content="Guardar Progreso" 

        Margin="10,0,10,22" 

        FontSize="16" 

        Grid.Row="1" 

        Click="BotonGuardarDatosClick" 

        Grid.Column="1" 

        Height="55" 

        VerticalAlignment="Bottom" 

        Foreground="Black" 

        BorderBrush="Black" 

        Background="#FFBBFFFD" 

        FontWeight="Bold">

                <Button.Style>

                    <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">

                        <Style.Triggers>

                            <Trigger Property="IsMouseOver" Value="True">

                                <Setter Property="Foreground" Value="Magenta"/>

                                <Setter Property="Cursor" Value="Hand"/>

                            </Trigger>

                        </Style.Triggers>

                    </Style>

                </Button.Style>

            </Button>



            <Button x:Name="BotonImportarDatos" Content="Importar

datos" Margin="32,0,10,150" VerticalAlignment="Bottom" Height="51"

FontSize="20" Grid.Row="1" Click="BotonImportarDatosClick"

FontWeight="Bold" BorderBrush="Black" Background="#FFFBFFB0"/>


            <Button x:Name="BotonBorrarDatos" Content="Eliminar

lista" Margin="32,0,10,94" VerticalAlignment="Bottom" Height="51"

FontSize="20" Grid.Row="1" Click="BotonBorrarDatosClick"

FontWeight="Bold" BorderBrush="Black" Background="#FF8C8A8A"

Foreground="White"/>



            <DataGrid x:Name="dgPiezas" d:ItemsSource="{d:SampleData

ItemCount=5}" AutoGenerateColumns="False" CanUserAddRows="False"

Grid.ColumnSpan="4" Margin="10,10,10,241" Grid.RowSpan="2"

ColumnWidth="*" IsReadOnly="True" CanUserSortColumns="False"

CanUserResizeColumns="False" CanUserReorderColumns="False"

CanUserResizeRows="False" SelectionMode="Single" SelectionUnit="FullRow"

MouseDoubleClick="ratonDobleClick" BorderBrush="#FF99B6D2">

                <DataGrid.Background>

                    <SolidColorBrush Color="#FFF0F0F0" Opacity="0.71"/>

                </DataGrid.Background>

                <DataGrid.Columns>

                    <DataGridTextColumn Header="Nombre" Binding="{Binding Nombre}"/>

                    <DataGridTextColumn Header="Color" Binding="{Binding Color}"/>

                    <DataGridTextColumn Header="Largo" Binding="{Binding Largo}"/>

                    <DataGridTextColumn Header="Ancho" Binding="{Binding Ancho}"/>

                </DataGrid.Columns>

                <DataGrid.RowStyle>

                    <Style TargetType="DataGridRow">

                        <Setter Property="Background" Value="White" />

                        <Style.Triggers>

                            <DataTrigger Binding="{Binding EstaTerminada}" Value="True">

                                <Setter Property="Background" Value="#FFC8FFC8" />

                            </DataTrigger>

                            <DataTrigger Binding="{Binding Datos.EsFaltaParcial}" Value="True">

                                <Setter Property="Background" Value="Orange" />

                            </DataTrigger>

                            <DataTrigger Binding="{Binding Datos.Falta}" Value="True">

                                <Setter Property="Background" Value="Red" />

                                <Setter Property="Foreground" Value="White" />

                            </DataTrigger>

                        </Style.Triggers>

                    </Style>

                </DataGrid.RowStyle>

            </DataGrid>



            <Label x:Name="ArrastrarElArchivoLabel"

Content="Arrastre el archivo&#xD;&#xA;           aquí"

Margin="150,54,217,0" VerticalAlignment="Top" AllowDrop="True"

Height="55" Background="{DynamicResource {x:Static

SystemColors.ScrollBarBrushKey}}" VerticalContentAlignment="Center"

HorizontalContentAlignment="Center" FontSize="16"

DragEnter="ArrastrarelArchivo" Drop="ArrastrarelArchivoDrop"

MouseLeftButtonDown="ArrastrarListaBotonClickRaton" Cursor="Hand"

Grid.Column="1" Grid.ColumnSpan="2"/>



            <Button x:Name="btnAdmin" Content="⚙️ Modo

Administrador" Click="btnAdmin_Click" Background="#2c3e50"

Foreground="White" Padding="10,5" Margin="25,0,24,190" Grid.Column="3"

Grid.Row="1" Height="27" VerticalAlignment="Bottom"/>


            <Button Grid.Column="2" Content="Pieza Terminada"

Margin="0,0,10,156" Grid.Row="1" Name="PiezaTerminadaBoton"

Click="PiezaTerminadaBotonClick" FontSize="16" Height="59"

VerticalAlignment="Bottom" IsDefault="True" FontWeight="Bold"

BorderBrush="Black" Foreground="Black" Background="#FFB9FFC0"/>


            <Button Grid.Column="2" Content="Eliminar último estado

&#xD;&#xA;       de fabricación" Margin="0,0,10,22" Grid.Row="1"

Name="RetrocederBoton" Click="RetrocederBotonClick" FontSize="16"

Height="53" VerticalAlignment="Bottom" FontWeight="Bold"

Background="#FFFFD6A4" BorderBrush="Black" Foreground="Black"/>


            <Button Content="Cambiar de máquina" Margin="0,0,10,10"

Grid.Row="1" Grid.Column="3" Background="#FF7967FF" BorderBrush="Black"

Foreground="White" Click="BotonCambiarDeMaquinaClick" Height="26"

VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="142"/>


            <TextBlock Margin="32,0,10,22" Grid.Row="1"

TextWrapping="Wrap" TextAlignment="Center" FontFamily="Arial"

Background="{DynamicResource {x:Static

SystemColors.GradientInactiveCaptionBrushKey}}" FontSize="36"

FontWeight="Bold" Name="textBlockNombreDeMaquina" Foreground="#FF7663FF"

Height="55" VerticalAlignment="Bottom"/>


            <Button Grid.Column="2" Content="FALTA"

Margin="0,0,10,86" Grid.Row="1" FontFamily="Arial Black"

Foreground="Black" BorderBrush="Black" Background="#FFFF9D9D"

Click="BotonFaltaPieza" FontSize="16" Height="59"

VerticalAlignment="Bottom"/>


            <ComboBox Grid.Column="3" 

          Margin="0,0,10,43" 

          Grid.Row="1" 

          Name="comboBoxResoluciones"

          SelectionChanged="comboBoxResoluciones_SelectionChanged" 

          Height="22" 

          VerticalAlignment="Bottom" 

          HorizontalAlignment="Right" 

          Width="142">

                <ComboBoxItem Content="3840 x 2160 (4K)"/>

                <ComboBoxItem Content="2560 x 1440 (2K)"/>

                <ComboBoxItem Content="1920 x 1080"/>

                <ComboBoxItem Content="1280 x 720"/>

                <ComboBoxItem Content="1024 x 768"/>

                <ComboBoxItem Content="Maximizada"/>

            </ComboBox>



            <ComboBox x:Name="cbUsuarios" DisplayMemberPath="Nombre"

SelectionChanged="ComboBox_SeleccionUsuario" Grid.Column="1"

Margin="28,0,28,176" Grid.Row="1" Height="33"

VerticalAlignment="Bottom"/>



            <Button Grid.Column="1" Content="➕ Añadir nuevo usuario"

Margin="38,0,38,145" Grid.Row="1" VerticalAlignment="Bottom"

Click="botonAnadirUsuarioClick" Visibility="Collapsed"

Name="botonAnadirUsuario" Height="26"/>


            <Button Grid.Column="1" Content="🗑️ Borrar usuario"

Margin="48,0,48,120" Grid.Row="1" Click="botonBorrarUsuarioClick"

Visibility="Collapsed" Name="botonBorrarUsuario" Height="20"

VerticalAlignment="Bottom"/>


            <Button Grid.Column="3" Content="Salir"

Margin="39,0,40,160" Grid.Row="1" Background="#FF291D1D"

Foreground="White" BorderBrush="#FF524949" Visibility="Collapsed"

Name="botonSalirModoAdministrador" Click="botonSalirAdministradorClick"

FontSize="14" Height="25" VerticalAlignment="Bottom"/>


            <Button Grid.Column="3" Content="Desglose de los datos"

Margin="7,0,8,74" Grid.Row="1" FontSize="16" Background="#FFD2A3EA"

BorderBrush="Black" Foreground="Black" FontWeight="Bold"

Click="AbrirVentanaDesgloseDeLasPiezas" Height="37"

VerticalAlignment="Bottom"/>


            <Button Grid.Column="3" Content="Gráficas y

Estadísticas" Margin="9,0,10,116" Grid.Row="1"

Click="BotonAbrirGraficas" Background="#FFD2A3EA" BorderBrush="Black"

Foreground="Black" FontWeight="Bold" FontSize="16"

Visibility="Collapsed" Name="botonAbrirGraficas" Height="36"

VerticalAlignment="Bottom"/>
            <Button Grid.Column="1" Content="Enviar Siguiente Lista" HorizontalAlignment="Center" Margin="0,311,0,0" Grid.Row="1" VerticalAlignment="Top" Height="33" Width="207" Name="BtnNotificarCarga" Click="BtnNotificarCarga_Click" Background="#FFD4C142" Foreground="White" FontWeight="Bold" FontSize="16"/>

        </Grid>

    </Border>

</Window>

